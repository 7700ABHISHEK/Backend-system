<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light vh-100">

    <%- include("partials/header.ejs") %>

        <div class="container" style="max-width: 600px;">
            <div class="card p-4 shadow">

                <h2 class="text-center mb-4 fw-bold">Add New Book</h2>

                <form action="/books/add" method="POST">

                    <div class="mb-3">
                        <label for="name" class="form-label">Book Name</label>
                        <input id="name" type="text" name="bookName" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="author" class="form-label">Author Name</label>
                        <input id="author" type="text" name="authorName" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input id="price" type="number" name="price" class="form-control" min="0" required>
                    </div>

                    <div class="mb-3">
                        <label for="genre" class="form-label">Genre</label>
                        <select name="genre" id="genre" class="form-select">
                            <option value="">Select Genre</option>
                            <option value="fiction">Fiction</option>
                            <option value="nonfiction">Non-Fiction</option>
                            <option value="mystery">Mystery</option>
                            <option value="fantasy">Fantasy</option>
                            <option value="biography">Biography</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="publish" class="form-label">Published Date</label>
                        <input id="publish" type="date" name="publishedDate" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label d-block">Book Format</label>

                        <div class="d-flex gap-4">
                            <div class="form-check">
                                <input id="eBook" class="form-check-input" type="radio" name="format" value="ebook"
                                    required>
                                <label for="eBook" class="form-check-label">eBook</label>
                            </div>

                            <div class="form-check">
                                <input id="paper-work" class="form-check-input" type="radio" name="format"
                                    value="paperwork">
                                <label for="paper-work" class="form-check-label">Paper Work</label>
                            </div>

                            <div class="form-check">
                                <input id="paper-book" class="form-check-input" type="radio" name="format"
                                    value="paperbook">
                                <label for="paper-book" class="form-check-label">Paper Book</label>
                            </div>
                        </div>
                    </div>


                    <div class="form-check mb-4">
                        <input id="discount" class="form-check-input" type="checkbox" name="discountEligible">
                        <label for="discount" class="form-check-label">Eligible for Discount</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 fw-semibold">
                        Add Book
                    </button>

                </form>

            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>