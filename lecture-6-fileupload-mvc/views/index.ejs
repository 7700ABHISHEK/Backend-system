<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Student</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="bg-dark d-flex flex-column justify-content-start align-items-center py-5">

    <form action="/add-student" method="post" enctype="multipart/form-data"
        class="bg-secondary p-4 rounded shadow-lg mb-5" style="width: 400px;">

        <h2 class="text-white text-center mb-4">Add Student</h2>

        <div class="mb-3">
            <label class="form-label text-light">Name</label>
            <input type="text" name="name" class="form-control bg-dark text-white border-0" required>
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Age</label>
            <input type="number" name="age" class="form-control bg-dark text-white border-0" required>
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Email</label>
            <input type="email" name="email" class="form-control bg-dark text-white border-0" required>
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Photo</label>
            <input type="file" name="photo" accept="image/*" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            Add Student
        </button>

    </form>

    <div class="container">
        <h3 class="text-white mb-3 text-center">Student List</h3>

        <table class="table table-dark table-bordered table-striped text-center align-middle">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th>Photo</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% students.map((std, idx) => { %>
                    <tr>
                        <td><%= idx + 1 %></td>
                        <td><%= std.name %></td>
                        <td><%= std.age %></td>
                        <td><%= std.email %></td>
                        <td>
                            <img src="<%= std.photo %>" alt="<%= std.name %>" width="100px">
                        </td>
                        <td>
                            <a href="/delete-student/<%= std.id %>" class="btn btn-danger">Delete</a>
                            <a href="/update-student/<%= std.id %>" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>

</html>